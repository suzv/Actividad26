
<div class="col-md-6 border border-primary" >

  <h1>Listos</h1>

  <% @todo.each do |i| %>
     <% if i.completed == true %>
       <ul class="list-group">
         <li class="list-group-item"><%= i.description %></li>
       </ul>
     <% end %>
    <% end %>

</div>

<div class="col-md-6">
  <h1>No Listos </h1>
  <% @todo.each do |i| %>
     <% if i.completed == nil %>
     <ul class="list-group">
       <li class="list-group-item"><%= i.description %></li>
     </ul>
     <% end %>
    <% end %>
</div>
